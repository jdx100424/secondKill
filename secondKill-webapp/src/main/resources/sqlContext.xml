	<!-- 
	<bean id="masterDataSource" class="org.apache.commons.dbcp2.BasicDataSource">-->
	<bean id="masterDataSource" class="com.alibaba.druid.pool.DruidDataSource" init-method="init" destroy-method="close"> 
		<!--  
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://${mysql.master.ip}:${mysql.master.port}/jdxTestMaster" />
		-->
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://${mysql.master.ip}:${mysql.master.port}/jdxTestMaster?useUnicode=true&amp;characterEncoding=UTF-8" />
		<property name="username" value="${mysql.master.username}" />
		<property name="password" value="${mysql.master.password}" />
		<property name="maxActive" value="100" />  
		<property name="initialSize" value="10" />  
	</bean>
	<!--  
	<bean id="slaveDataSource" class="org.apache.commons.dbcp2.BasicDataSource">-->
	<bean id="slaveDataSource" class="com.alibaba.druid.pool.DruidDataSource" init-method="init" destroy-method="close">
		<!--  
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://${mysql.slave.ip}:${mysql.slave.port}/jdxTestSlave" />
		-->
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://${mysql.slave.ip}:${mysql.slave.port}/jdxTestSlave?useUnicode=true&amp;characterEncoding=UTF-8" />
		<property name="username" value="${mysql.slave.username}" />
		<property name="password" value="${mysql.slave.password}" />
		<property name="maxActive" value="100" />  
		<property name="initialSize" value="10" />  
	</bean>
	<bean id="dataSource" class="com.maoshen.component.db.ReplicationDataSource">
		<property name="targetDataSources">
			<map key-type="java.lang.String">
				<entry key="master" value-ref="masterDataSource" />
				<entry key="slave" value-ref="slaveDataSource" />
			</map>
		</property>
		<property name="defaultTargetDataSource" ref="masterDataSource" />
	</bean>



	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="com.maoshen.**.dao" />
		<property name="sqlSessionFactoryBeanName" value="myBatisSqlSessionFactory" />
		<property name="annotationClass" value="org.springframework.stereotype.Repository" />
	</bean>
	<bean id="myBatisSqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="mapperLocations" value="classpath*:mapper/*Mapper.xml" />
	</bean>

	<bean id='replicationDataSourceAspect' class="com.maoshen.component.db.ReplicationDataSourceAspect">
	</bean>

	<aop:config>
		<aop:aspect id="c" ref="replicationDataSourceAspect">
			<aop:pointcut id="mapperTx"
				expression="execution(* com.maoshen.*.service.*.*(..))" />
			<aop:before pointcut-ref="mapperTx" method="before" />
		</aop:aspect>
	</aop:config>

    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource"/>
    </bean>
	<!-- 配置 Annotation 驱动，扫描@Transactional注解的类定义事务  -->
	<tx:annotation-driven transaction-manager="transactionManager" proxy-target-class="true"/>

</beans>


